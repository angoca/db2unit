 <profiles>
  <profile>
   <id>nix</id>
   <activation>
    <os>
     <family>unix</family>
    </os>
   </activation>
   <build>
    <plugins>

     <!-- Compile the objects. -->
     <!-- mvn compile -->
     <!-- Execute the tests. -->
     <!-- mvn test -->
     <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>exec-maven-plugin</artifactId>
      <version>1.6.0</version>
      <executions>
       <execution>
        <id>val-nix</id>
        <phase>validate</phase>
        <goals>
         <goal>exec</goal>
        </goals>
        <configuration>
         <executable>src/test/maven/validate</executable>
        </configuration>
       </execution>
       <execution>
        <id>init-nix</id>
        <phase>initialize</phase>
        <goals>
         <goal>exec</goal>
        </goals>
        <configuration>
         <executable>src/test/maven/create</executable>
        </configuration>
       </execution>
       <execution>
        <id>compile-nix</id>
        <phase>compile</phase>
        <goals>
         <goal>exec</goal>
        </goals>
        <configuration>
         <executable>src/test/maven/compile</executable>
        </configuration>
       </execution>
       <execution>
        <id>compiletests-nix</id>
        <phase>test-compile</phase>
        <goals>
         <goal>exec</goal>
        </goals>
        <configuration>
         <executable>src/test/maven/test-compile</executable>
        </configuration>
       </execution>
       <execution>
        <id>tests-nix</id>
        <phase>test</phase>
        <goals>
         <goal>exec</goal>
        </goals>
        <configuration>
         <executable>src/test/maven/test</executable>
        </configuration>
       </execution>
      </executions>
     </plugin>
    </plugins>
   </build>
  </profile>
  <profile>
   <id>win</id>
   <activation>
    <os>
     <family>windows</family>
    </os>
   </activation>
   <build>
    <plugins>
     <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>exec-maven-plugin</artifactId>
      <version>1.6.0</version>
      <executions>
       <execution>
        <id>val-win</id>
        <phase>validate</phase>
        <goals>
         <goal>exec</goal>
        </goals>
        <configuration>
         <executable>cmd</executable>
         <arguments>
          <argument>/C</argument>
          <argument>src\\test\\maven\\validate.bat</argument>
         </arguments>
        </configuration>
       </execution>
       <execution>
        <id>init-win</id>
