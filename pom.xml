         </arguments>
        </configuration>
       </execution>
       <execution>
        <id>compile-win</id>
        <phase>compile</phase>
        <goals>
         <goal>exec</goal>
        </goals>
        <configuration>
         <executable>cmd</executable>
         <arguments>
          <argument>/C</argument>
          <argument>src\\test\\maven\\compile.bat</argument>
         </arguments>
        </configuration>
